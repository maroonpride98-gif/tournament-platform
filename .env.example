# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/gamearena?schema=public"

# Auth
JWT_SECRET="your-super-secret-jwt-key-change-this"
NEXTAUTH_SECRET="your-nextauth-secret-change-this"
NEXTAUTH_URL="http://localhost:3000"

# OAuth Providers (optional)
DISCORD_CLIENT_ID=""
DISCORD_CLIENT_SECRET=""
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# API (backend)
API_URL="http://localhost:4000"
FRONTEND_URL="http://localhost:3000"

# API (frontend - must be prefixed with NEXT_PUBLIC_)
NEXT_PUBLIC_API_URL="http://localhost:4000/api"

# Square Payments
# Get your keys at https://developer.squareup.com/apps
# Use sandbox for testing, production for live payments
SQUARE_ACCESS_TOKEN="your-square-access-token"
SQUARE_ENVIRONMENT="sandbox"
SQUARE_LOCATION_ID="your-location-id"
# Webhook configuration
# Create webhook at https://developer.squareup.com/apps/{app_id}/webhooks
# Subscribe to: order.fulfillment.updated, payment.completed
SQUARE_WEBHOOK_URL="https://your-domain.com/api/square/webhook"
SQUARE_WEBHOOK_SIGNATURE_KEY="your-webhook-signature-key"

# Sentry Error Tracking (optional)
SENTRY_DSN=""
NEXT_PUBLIC_SENTRY_DSN=""
SENTRY_ORG=""
SENTRY_PROJECT=""

# Node Environment
NODE_ENV="development"
